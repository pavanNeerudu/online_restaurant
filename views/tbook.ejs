    <script>

	(function(){

		$('#btn-order').click(function(event){

			if(event)
			{
				event.preventDefault();

				var order = {
					name: $(btname).val(),
					mobile_number: $(btmob).val(),
					btparty: $(btpsize).val(),
					btdate: $(btdate).val(),
					times: $(time_details).val(),

				}
				console.log(JSON.stringify(order));

				$.ajax({
					url:'/tbook',
					method: 'POST',
					data: order,
					success: function(resp){
						console.log('order received'+ JSON.stringify(order));

						$("#btn-order-container").html('<h3>Table booked!</h3>');
					},
					error: function(resp){
						console.log('error');
					}
				})
			}
		})
	})();
	</script>

   
