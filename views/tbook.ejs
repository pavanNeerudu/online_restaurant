<body style="background-color: rgb(26, 25, 25);">

    <%- include('partials/nav'); -%>
   <div class="baap" style="background-image: url(images/e1.jpg); " >
   
      <div class="bt_cont" style="margin-bottom : 58px">
        <h2 style="text-align: center;">Grab Your Table!</h2>
        <h4>Avoid standing in a line!</h4>
        <h4>Reserve a table in advance.</h4>
            <br>
            <div class="unfor">
                <form action="/tbook" method="post">
                    <div class="matter">
                        <div class="input_details">
                            <span class="details">Name</span>
                            <input type="text" id = "btname" placeholder="Your Name" name="name" required>
                        </div>
                        <div class="input_details">
                            <span class="details">Mobile Number</span>
                            <input type="text" id = "btmob" placeholder="Your Mobile Number" name="mobile_number" required>
                        </div>
                        <div class="input_details">
                            <span class="details">Party Size</span>
                            <input type="text" id = "btpsize" placeholder="Number of People" name="btparty" required>
                        </div>
                        <div class="input_details">
                            <span class="details">Date</span>
                            <input type="date" id = "btdate" placeholder="Choose Date" name="btdate" required>
                        </div>
                        <div class="input_details">
                            <span class="details">Time</span>
                            <select id="time_details" name="times">
                                <option value="am">Choose Time</option>
                                <option value="am900">9:00 AM</option>
                                <option value="am930">9:30 AM</option>
                                <option value="am1000">10:00 AM</option>
                                <option value="am1030">10:30 AM</option>
                                <option value="pm1230">12:30 PM</option>
                                <option value="pm100">1:00 PM</option>
                                <option value="pm130">1:30 PM</option>
                                <option value="pm200">2:00 PM</option>
                                <option value="pm230">2:30 PM</option>
                                <option value="pm300">3:00 PM</option>
                                <option value="pm700">7:00 PM</option>
                                <option value="pm730">7:30 PM</option>
                                <option value="pm800">8:00 PM</option>
                                <option value="pm830">8:30 PM</option>
                                <option value="pm900">9:00 PM</option>
                                <option value="pm930">9:30 PM</option>
                                <option value="pm1000">10:00 PM</option>
                              </select>
                        </div>
                        <div class="butt">
                         <div class="col-md-12 mt-3">
                  <div id="btn-order-container"class="form-group">
                    <input type="submit" id="btn-order" value="Book table!" class="btn btn-primary py-3 px-5">
                  </div>
                    </div>
                        </div>
                   
                </form>
            </div>
    </div>
    </div>
    </div>
    <%- include('partials/script'); -%>
  <!-- loader -->
  
