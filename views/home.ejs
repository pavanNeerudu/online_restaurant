				event.preventDefault();

				var order = {
					name: $(order_name).val(),
					email: $(order_email).val(),
					phone: $(order_phone).val(),
					phone1: $(order_phone1).val(),
					feedback: $(order_order).val(),

				}
				console.log(JSON.stringify(order));

				$.ajax({
					url:'/order',
					method: 'POST',
					data: order,
					success: function(resp){
						console.log('order received'+ JSON.stringify(order));

						$("#btn-order-container").html('<h3>Order received!</h3>');
					},
					error: function(resp){
						console.log('error');
					}
				})
			}
		})
	})();
